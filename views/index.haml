- content_for :header do
	%p
		= @client.host
		|
		= link_to 'Switch', '/switch', :class => 'button'
%div#main
	- @client.views.each do |view|
		%div.view
			%h2
				= view.title
			%div.jobs
				- view.sources.collect {|s| s.current_data['jobs']}.flatten.each do |job|
					%div(class="job #{job['color']}")
						%p
							= link_to job['name'], job['url']
